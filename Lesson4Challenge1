        <h1>Enter a number to square!</h1>
        <button onclick="numberDoubler()">Click Me!</button>
        <script>
        function numberDoubler () {
          let input = prompt ('Enter a number to square');
          let result = 0;

          result = Number(input) * Number(input);

          alert(result);
        }
        </script>
